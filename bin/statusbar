#!/usr/bin/env bash
set -euo pipefail
while echo -en "$(nmcli net con | grep -q full && nmcli --fields type,name con show --active | tail -n+2 | awk '{ ty = $1; $1 = ""; print (ty == "wifi" ? " " : "") $0 "  " }' | head -n1)$(if [ -e /sys/class/power_supply/BAT0 ]; then echo -n " $(< /sys/class/power_supply/BAT0/capacity)%  "; fi) $(date +'%Y-%m-%d')   $(date +'%I:%M:%S %p')"; do sleep 1; done
